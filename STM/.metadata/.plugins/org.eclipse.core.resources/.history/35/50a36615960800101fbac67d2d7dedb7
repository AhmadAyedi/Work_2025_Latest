/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
uint8_t Rx_Buffer[50];          // Buffer for current received data
uint8_t Storage_Buffer[100];    // Buffer to store previous received data
volatile uint8_t Rx_Index = 0;  // Index for Rx_Buffer
volatile uint8_t Storage_Index = 0;  // Index for Storage_Buffer
volatile uint8_t Rx_Data;       // Temporary variable for received byte
volatile uint8_t Frame_Complete = 0;  // Flag to indicate a full frame received
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
/* USER CODE BEGIN PFP */
void Process_Received_Data(void);
void Store_Previous_Data(void);
void Clear_Rx_Buffer(void);
/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
  if (huart->Instance == USART2)  // Check if interrupt is from USART2
  {
    Rx_Buffer[Rx_Index++] = Rx_Data;  // Store byte in Rx_Buffer

    // Check for frame end (newline) or buffer overflow
    if (Rx_Data == '\n' || Rx_Index >= 50)
    {
      Frame_Complete = 1;  // Mark frame as complete
    }

    // Restart UART interrupt for next byte
    HAL_UART_Receive_IT(&huart2, (uint8_t*)&Rx_Data, 1);
  }
}

/* Process received data and move to storage */
void Process_Received_Data(void)
{
  if (Frame_Complete)
  {
    Store_Previous_Data();  // Move current data to storage
    Clear_Rx_Buffer();      // Reset Rx_Buffer for next frame
    Frame_Complete = 0;     // Reset flag
  }
}

/* Store current Rx_Buffer content in Storage_Buffer */
void Store_Previous_Data(void)
{
  // Check if there's enough space in Storage_Buffer
  if (Storage_Index + Rx_Index <= 100)
  {
    memcpy(&Storage_Buffer[Storage_Index], Rx_Buffer, Rx_Index);  // Append Rx_Buffer to Storage_Buffer
    Storage_Index += Rx_Index;  // Update storage index
  }
  else
  {
    // If Storage_Buffer is full, shift data left and append
    memmove(Storage_Buffer, &Storage_Buffer[Rx_Index], Storage_Index - Rx_Index);  // Shift data
    memcpy(&Storage_Buffer[100 - Rx_Index], Rx_Buffer, Rx_Index);  // Append new data
    Storage_Index = 100;  // Keep Storage_Index at max
  }
}

/* Clear Rx_Buffer and reset Rx_Index */
void Clear_Rx_Buffer(void)
{
  memset(Rx_Buffer, 0, sizeof(Rx_Buffer));  // Clear Rx_Buffer
  Rx_Index = 0;  // Reset index
}
/* USER CODE END 0 */
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  /* USER CODE BEGIN 2 */
  memset(Rx_Buffer, 0, sizeof(Rx_Buffer));
    memset(Storage_Buffer, 0, sizeof(Storage_Buffer));
    Rx_Index = 0;
    Storage_Index = 0;
    Frame_Complete = 0;

    // Start UART in interrupt mode
    HAL_UART_Receive_IT(&huart2, (uint8_t*)&Rx_Data, 1);
    /* USER CODE END 2 */  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */
	  Process_Received_Data();  // Handle completed frames
    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  if (HAL_PWREx_ControlVoltageScaling(PWR_REGULATOR_VOLTAGE_SCALE1) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_MSI;
  RCC_OscInitStruct.MSIState = RCC_MSI_ON;
  RCC_OscInitStruct.MSICalibrationValue = 0;
  RCC_OscInitStruct.MSIClockRange = RCC_MSIRANGE_6;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_MSI;
  RCC_OscInitStruct.PLL.PLLM = 1;
  RCC_OscInitStruct.PLL.PLLN = 40;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV7;
  RCC_OscInitStruct.PLL.PLLQ = RCC_PLLQ_DIV2;
  RCC_OscInitStruct.PLL.PLLR = RCC_PLLR_DIV2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_4) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief USART2 Initialization Function
  * @param None
  * @retval None
  */
static void MX_USART2_UART_Init(void)
{

  /* USER CODE BEGIN USART2_Init 0 */

  /* USER CODE END USART2_Init 0 */

  /* USER CODE BEGIN USART2_Init 1 */

  /* USER CODE END USART2_Init 1 */
  huart2.Instance = USART2;
  huart2.Init.BaudRate = 115200;
  huart2.Init.WordLength = UART_WORDLENGTH_8B;
  huart2.Init.StopBits = UART_STOPBITS_1;
  huart2.Init.Parity = UART_PARITY_NONE;
  huart2.Init.Mode = UART_MODE_TX_RX;
  huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart2.Init.OverSampling = UART_OVERSAMPLING_16;
  huart2.Init.OneBitSampling = UART_ONE_BIT_SAMPLE_DISABLE;
  huart2.AdvancedInit.AdvFeatureInit = UART_ADVFEATURE_NO_INIT;
  if (HAL_UART_Init(&huart2) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN USART2_Init 2 */

  /* USER CODE END USART2_Init 2 */

}

